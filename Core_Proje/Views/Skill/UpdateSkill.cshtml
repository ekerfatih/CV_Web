@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Skill

<div class="container mt-5">
    <div class="card p-4 w-100 mx-auto">
        <h3 class="mb-4 text-center">Skill Güncelle</h3>
        <form asp-action="UpdateSkill" method="post">
            <input type="hidden" name="SkillId" value="@Model.SkillID" />
            <div class="mb-3">
                <label class="form-label">Yetenek Başlığı</label>
                <input class="form-control" type="text" value="@Model.Title" name="Title" placeholder="Örn: SQL, C#" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Oran (%)</label>
                <input class="form-control" type="number" value="@Model.Value" name="Value" min="0" max="100" placeholder="Örn: 90" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Güncelle</button>
            </div>
        </form>
    </div>
</div>
