@model List<Skill>
@{
    ViewData["Title"] = "Yetenek Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<div class="table-responsive">
    <div class="card-header border-0 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Yetenek Listesi</h2>
        <a href="/Skill/AddSkill" class="btn btn-primary">+ Yeni Yetenek Ekle</a>
    </div>

    <table class="table table-hover align-items-center">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col" class="text-center">Oran</th>
                <th scope="col" class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <a href="#" class="avatar rounded-circle mr-3">
                                <img alt="Yetenek" src="~/argon-dashboard-master/assets/img/theme/bootstrap.jpg"
                                     style="width: 40px; height: 40px; object-fit: cover;">
                            </a>
                            <div>
                                <span class="font-weight-bold">@item.Title</span>
                            </div>
                        </div>
                    </td>

                    <td class="text-center" style="width: 40%;">
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2 font-weight-bold">@item.Value%</span>
                            <div class="progress w-100" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"
                                     style="width: @item.Value%;"></div>
                            </div>
                        </div>
                    </td>

                    <td class="text-center">
                        <a asp-action="DeleteSkill" asp-controller="Skill" asp-route-id="@item.SkillID"
                           class="btn btn-danger btn-sm">Sil</a>
                        <a asp-action="UpdateSkill" asp-controller="Skill" asp-route-id="@item.SkillID"
                           class="btn btn-warning btn-sm">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
