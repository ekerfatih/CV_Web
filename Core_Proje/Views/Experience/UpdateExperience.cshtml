@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Experience

<div class="container mt-5">
    <div class="card p-4 w-100 mx-auto">
        <h3 class="mb-4 text-center">Tecrübe Güncelle</h3>
        <form asp-action="UpdateExperience" method="post">
            <input type="hidden" name="ExperienceID" value="@Model.ExperienceID" />
            <div class="mb-3">
                <label class="form-label">Tecrübe Başlığı</label>
                <input class="form-control" type="text" value="@Model.Name" name="Name" placeholder="Örn: SQL, C#" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Tarih</label>
                <input class="form-control" type="text" value="@Model.Date"  name="Date" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Fotoğraf</label>
                <input class="form-control" type="text" value="@Model.ImageURL" name="ImageUrl" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <textarea class="form-control" type="text" name="Description" required rows="4">@Model.Description</textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Güncelle</button>
            </div>
        </form>
    </div>
</div>
