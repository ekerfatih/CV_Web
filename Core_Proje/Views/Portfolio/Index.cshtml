@model List<Portfolio>
@{
    ViewData["Title"] = "Proje Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<div class="table-responsive">
    <div class="card-header border-0 d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Proje Listesi</h2>
        <a asp-controller="Experience" asp-action="AddExperience" class="btn btn-primary">+ Yeni Proje Ekle</a>
    </div>

    <table class="table table-hover align-items-center">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Proje İsmi</th>
                <th scope="col">Kapak Resmi</th>
                <th scope="col">Ek Resim</th>
                <th scope="col">Bağlantı</th>
                <th scope="col" class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <a href="#" class="avatar rounded-circle mr-3">
                                <img alt="Proje Resmi" src="~/argon-dashboard-master/assets/img/theme/bootstrap.jpg" style="width: 40px; height: 40px; object-fit: cover;">
                            </a>
                            <div>
                                <span class="font-weight-bold">@item.Name</span>
                            </div>
                        </div>
                    </td>

                    
                    <td>
                        <img src="@item.ImageUrl" alt="Kapak Resmi" class="rounded"
                             style="width: 120px; height: 80px; object-fit: cover;">
                    </td>

                   
                    <td>
                        <img src="@item.ImageUrl2" alt="Ek Resim" class="rounded"
                             style="width: 120px; height: 80px; object-fit: cover;">
                    </td>

                    
                    <td>
                        <a href="@item.ProjectUrl" target="_blank" class="text-primary">
                            @item.ProjectUrl
                        </a>
                    </td>

                   
                    <td class="text-center">
                        <a asp-action="DeleteExperience" asp-controller="Experience" asp-route-id="@item.PortfolioID" class="btn btn-danger btn-sm">
                            Sil
                        </a>
                        <a asp-action="UpdateExperience" asp-controller="Experience" asp-route-id="@item.PortfolioID" class="btn btn-warning btn-sm">
                            Güncelle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
