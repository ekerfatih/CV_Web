@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="card p-4 w-100 mx-auto">
        <h3 class="mb-4 text-center">Yeni Tecrübe Girişi</h3>
        <form asp-action="AddExperience" method="post">
            <div class="mb-3">
                <label class="form-label">Tecrübe Başlığı</label>
                <input class="form-control" type="text"  name="Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Tarih</label>
                <input class="form-control" type="text"  name="Date" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Fotoğraf</label>
                <input class="form-control" type="text"  name="ImageUrl" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <textarea class="form-control" type="text" name="Description" required rows="4"></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Ekle</button>
            </div>
        </form>
    </div>
</div>
