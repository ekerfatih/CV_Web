@model List<Testimonial>

<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Çalışma Arkadaşları</h2>
        </div>

        @{
            int i = 0;
            int[] delayValues = { 100, 300, 200, 400 }; // Döngüye girecek delay değerleri
        }

        <div class="row">
            @foreach (var item in Model) {
                var side = i % 2 == 0 ? "fade-right" : "fade-left";
                var delay = delayValues[i % delayValues.Length]; // Delay dizisinden sıradaki değeri al

                <div class="col-md-6 mb-5" data-aos="@side" data-aos-delay="@delay">
                    <div class="d-flex ms-md-3">
                        <span><i class="fas fa-2x fa-quote-left"></i></span>
                        <span class="m-2">@item.Comment</span>
                    </div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@item.ClientName</div>
                            <div class="text-small">@item.Title / @item.Company</div>
                        </div>
                        <img class="me-md-3 rounded" src="@item.ImageUrl" width="96" height="96" alt="@item.ImageUrl" />
                    </div>
                </div>

                i++; 
            }
        </div>
    </div>
</div>
